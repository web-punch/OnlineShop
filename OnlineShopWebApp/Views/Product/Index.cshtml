@model ProductViewModel
@{
    ViewData["Title"] = $"Купить {Model.Name} в интернет-магазине Знаки Внимания";
}
<div class="container">
    <div class="row">
        <div class="col-6">
            @if (Model.ImagesPaths.Count > 0)
            {
                <img class="img-fluid" src="@Model.ImagesPaths[Model.ActiveIndexImagePath]" alt="@Model.Name" />
            }
        </div>
        <div class="col-6">
            <div class="d-flex justify-content-between">
                <h2 class="h2">@Model.Name</h2>
                <h4 class="h4">Рейтинг: @Model.Rating</h4>
            </div>
            <h3 class="h3">@Model.Cost руб</h3>
            <p class="lead">@Model.Description</p>
            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-secondary" role="button" asp-area="" asp-controller="Home" asp-action="Index">Продолжить покупки</a>
                <button class="buttonAddToFavorites btn btn-outline-success" data-productId="@Model.Id">Добавить в избранное</button>
                <button class="buttonAddToCart btn btn-outline-primary" data-productId="@Model.Id">Добавить в корзину</button>
            </div>
            <hr class="text-dark" />
            <div class="mt-3 d-flex justify-content-between">
                <h4 class="h4">Отзывы</h4>
                <a class="text-primary btn btn-outline-light px-0" role="button" asp-area="" asp-controller="Product" asp-action="AddReview" asp-route-productId="@Model.Id">Добавить отзыв</a>
            </div>
            @foreach(var review in Model.Reviews)
            {
                <div>
                    @review.Text - @review.Grade
                </div>
            }
        </div>
    </div>
</div>
