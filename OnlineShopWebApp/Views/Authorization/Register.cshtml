@model Register
@{
    ViewData["Title"] = "Регистрация - интернет-магазин Знаки Внимания";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-5 shadow-lg">
            <h3 class="h3 text-center">Регистрация</h3>
            <form asp-controller="Authorization" asp-action="Register" method="post">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
                <div class="mb-3">
                    <input asp-for="UserName" class="form-control" placeholder="Логин" required />
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="mb-3">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Пароль" required />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердите пароль" required />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-outline-info w-75 mb-3">Зарегистрироваться</button>
                </div>
            </form>
        </div>
    </div>
</div>

