@model CartItemViewModel

<td class="d-flex flex-column">
    @if (Model?.Product?.ImagesPaths.Count > 0)
    {
        <img class="col-1 img-fluid" src="@Model?.Product?.ImagesPaths[Model.Product.ActiveIndexImagePath]" alt="@Model?.Product?.Name" />
    }
    <a class="link-info text-decoration-none" asp-controller="Product" asp-action="Index" asp-route-id="@Model?.Product?.Id">@Model?.Product?.Name</a>
</td>
<td class="text-end">@Model?.Product?.Cost руб.</td>
<td class="text-end">@Model?.Amount</td>
<td class="text-end">@Model?.Cost руб.</td>
<td>
    @if (Model?.Amount > 1)
    {
        <button class="buttonReduceQuantity btn btn-outline-dark py-0" data-productId="@Model?.Product?.Id">-</button>
    }
    else
    {
        <a class="btn btn-outline-dark py-0" asp-controller="Cart" asp-action="Delete" asp-route-cartItemId="@Model?.Id" role="button">-</a>

    }
    <button class="buttonIncreaseQuantity btn btn-outline-dark py-0" data-productId="@Model?.Product?.Id">+</button>
    <a class="btn btn-outline-dark py-0" asp-controller="Cart" asp-action="Delete" asp-route-cartItemId="@Model?.Id" role="button" title="Удалить из корзины"><i class="bi bi-trash"></i></a>
</td>
