@model RoleViewModel
@{
    ViewData["Title"] = "Добавить роль - Панель администратора";
}

<div class="container">
    <div class="row gap-3 flex-nowrap">
        <div class="col-2 shadow-lg">
            @await Html.PartialAsync("AdminMenu")
        </div>
        <div class="col-10 shadow-lg">
            <h4 class="h4 mb-3">Добавить роль</h4>
            <form asp-area="Admin" asp-controller="Role" asp-action="Add" method="post">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="mb-3 d-flex align-items-center gap-3">
                    <label asp-for="Name" class="col-2 form-label">Наименование</label>
                    <div class="flex-grow-1">
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-outline-dark w-25">Добавить</button>
                </div>
            </form>
        </div>
    </div>
</div>


