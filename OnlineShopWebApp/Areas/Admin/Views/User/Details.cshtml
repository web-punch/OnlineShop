@model UserViewModel
@{
    ViewData["Title"] = "Пользователь - Панель администратора";
}

<div class="container">
    <div class="row gap-3 flex-nowrap">
        <div class="col-2 shadow-lg">
            @await Html.PartialAsync("AdminMenu")
        </div>
        <div class="col-10 shadow-lg">
            <h4 class="h4">Пользователь @Model.Name</h4>
            <hr />
            <table class="table">
                <tbody>
                    <tr>
                        <td class="col-3">Имя:</td>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <td class="col-3">Фамилия:</td>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <td class="col-3">Номер телефона:</td>
                        <td>@Model.Phone</td>
                    </tr>
                </tbody>
            </table>
            <div class="dropstart mb-3 text-end">
                <button class="btn btn-outline-light text-dark dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Действия
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="ChangePassword" asp-route-userName="@Model.Name">Смена пароля</a></li>
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-userName="@Model.Name">Редактирование данных</a></li>
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="EditRole" asp-route-userName="@Model.Name">Права доступа</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userName="@Model.Name">Удалить пользователя</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
