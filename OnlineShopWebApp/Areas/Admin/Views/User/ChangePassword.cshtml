@model PasswordChangePage
@{
    ViewData["Title"] = "Изменение пароля - Панель администратора";
}

<div class="container">
    <div class="row gap-3 flex-nowrap">
        <div class="col-2 shadow-lg">
            @await Html.PartialAsync("AdminMenu")
        </div>
        <div class="col-10 shadow-lg">
            <h4 class="h4">Изменение пароля</h4>
            <hr />
            <form asp-area="Admin" asp-controller="User" asp-action="ChangePassword" method="post">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="UserName" value="@Model.UserName" />
                <table class="table">
                    <tbody>
                        <tr>
                            <td class="col-3">Введите действующий пароль:</td>
                            <td>
                                <input type="password" asp-for="CurrentPassword" class="form-control" required />
                                <span asp-validation-for="CurrentPassword"></span>
                            </td>
                        </tr>
                        <tr>
                            <td class="col-3">Введите новый пароль:</td>
                            <td>
                                <input type="password" asp-for="NewPassword" class="form-control" required />
                                <span asp-validation-for="NewPassword"></span>
                            </td>
                        </tr>
                        <tr>
                            <td class="col-3">Подтвердите новый пароль:</td>
                            <td>
                                <input type="password" asp-for="ConfirmNewPassword" class="form-control" required />
                                <span asp-validation-for="ConfirmNewPassword"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="mb-3 text-end">
                    <button class="btn btn-outline-primary" type="submit">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>


